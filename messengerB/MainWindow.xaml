<Window x:Class="messengerB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:messengerB"
        mc:Ignorable="d"
        Title="MessengerB" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions></Grid.RowDefinitions>
        <TextBox x:Name="TextBoxOutput" Grid.Column="1" Height="auto" Margin="0,0,0,30" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Visible"></TextBox>
        <TextBox KeyUp="TextBoxInput_KeyUp" x:Name="TextBoxInput" Grid.Column="1" Width="300" Padding="5" Height="30" VerticalAlignment="Bottom"></TextBox>
        <Button Click="Button_Click" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,30" Padding="5">Send</Button>
    </Grid>
</Window>
